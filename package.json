{
  "name": "3d-viewer",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@babylonjs/core": "^8.26.0",
    "@babylonjs/havok": "^1.3.10",
    "@babylonjs/loaders": "^8.25.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "firebase": "^12.2.1",
    "lucide-react": "^0.543.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server:install": "if [ -d \"server\" ]; then echo 'Server directory found, installing...' && cd server && npm install; else echo 'Server directory not found, skipping server install'; fi",
    "server:start": "if [ -d \"server\" ]; then cd server && npm start; else echo 'Server directory not found'; exit 1; fi",
    "server:dev": "if [ -d \"server\" ]; then cd server && npm run dev; else echo 'Server directory not found'; exit 1; fi",
    "postinstall": "npm run server:install",
    "railway:build": "npm run build && npm run server:install",
    "railway:start": "npm run server:start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
